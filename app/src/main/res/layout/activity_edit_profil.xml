<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mo.bandit_v1.EditProfilActivity">


    <TextView
        android:text="Edit Profil:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bandRequest"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveEditProfilButton"
        android:layout_alignTop="@+id/bandRequest"
        android:layout_alignRight="@+id/relativeslayoutactivityeditprofile2"
        android:layout_alignEnd="@+id/relativeslayoutactivityeditprofile2" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relativeslayoutactivityeditprofile2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bandRequest">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vorname"
            android:id="@+id/vornameEditProfilTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:capitalize="words"
            android:hint="New first name"
            android:id="@+id/newVornameEditProfilEditText"
            android:layout_below="@+id/vornameEditProfilTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nachname"
            android:id="@+id/nachnameEditProfilTextView"
            android:layout_below="@+id/newVornameEditProfilEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="New last name"
            android:id="@+id/newNachnameEditProfilEditText"
            android:capitalize="words"
            android:layout_below="@+id/nachnameEditProfilTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Adresse"
            android:id="@+id/adresseEditProfilTextView"
            android:layout_below="@+id/newNachnameEditProfilEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="New adress"
            android:capitalize="words"
            android:id="@+id/newAdresseEditProfilEditText"
            android:layout_below="@+id/adresseEditProfilTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Instrument"
            android:id="@+id/instrumentEditProfilTextView"
            android:layout_below="@+id/newAdresseEditProfilEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="New instrument"
            android:capitalize="words"
            android:id="@+id/newInstrumentEditProfilEditText"
            android:layout_below="@+id/instrumentEditProfilTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Genre"
            android:id="@+id/genreEditProfilTextView"
            android:layout_below="@+id/newInstrumentEditProfilEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="New genre"
            android:capitalize="words"
            android:id="@+id/newGenreEditProfilEditText"
            android:layout_below="@+id/genreEditProfilTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email"
            android:id="@+id/emailEditProfilTextView"
            android:layout_below="@+id/newGenreEditProfilEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="New email"
            android:id="@+id/newEmailEditProfilEditText"
            android:layout_below="@+id/emailEditProfilTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RadioGroup
            android:id="@+id/instrumentAddOrDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/genreEditProfilTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/profileRadioButtonAdd"
            android:checked="false"
            android:layout_below="@+id/newAdresseEditProfilEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="44dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/profileRadioButtonDelete"
            android:checked="false"
            android:layout_below="@+id/instrumentEditProfilTextView"
            android:layout_alignLeft="@+id/profileRadioButtonAdd"
            android:layout_alignStart="@+id/profileRadioButtonAdd" />
        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mobilenumber"
            android:id="@+id/MobileNumberEditTextProfile"
            android:layout_below="@+id/newEmailEditProfilEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="New mobilenumber"
            android:id="@+id/NewMobileNumberEditTextProfile"
            android:layout_below="@+id/MobileNumberEditTextProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>
