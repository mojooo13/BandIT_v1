<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mo.bandit_v1.EditBandActivity">

    <TextView
        android:text="Edit Band:"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveEditBandButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bandname"
        android:id="@+id/newBandnameEditBandTextView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="New Bandname"
        android:layout_below="@+id/newBandnameEditBandTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/newBandnameEditBandEditText" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Members"
        android:id="@+id/newMemberEditBandTextView"
        android:layout_below="@+id/newBandnameEditBandEditText"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="New Members"
        android:id="@+id/newMembersEditBandEditText"
        android:layout_below="@+id/newMemberEditBandTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Genre"
        android:id="@+id/newGenreEditBandTextView"
        android:layout_below="@+id/newMembersEditBandEditText"
        android:layout_alignRight="@+id/newMemberEditBandTextView"
        android:layout_alignEnd="@+id/newMemberEditBandTextView" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="New Genre"
        android:id="@+id/newGenreEditBandEditText"
        android:layout_below="@+id/newGenreEditBandTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Musik"
        android:id="@+id/newMusikEditBandTextView"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/newGenreEditBandEditText"
        android:layout_alignEnd="@+id/newGenreEditBandEditText" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="New Musik"
        android:id="@+id/newMusikEditBandEditText"
        android:layout_below="@+id/newMusikEditBandTextView"
        android:layout_alignRight="@+id/newMusikEditBandTextView"
        android:layout_alignEnd="@+id/newMusikEditBandTextView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Instruments"
        android:id="@+id/newInstrumentsEditBandTextView"
        android:layout_below="@+id/newMusikEditBandEditText"
        android:layout_alignRight="@+id/newMusikEditBandEditText"
        android:layout_alignEnd="@+id/newMusikEditBandEditText" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="New Instrument"
        android:id="@+id/newInstrumentsEditBandEditText"
        android:layout_below="@+id/newInstrumentsEditBandTextView"
        android:layout_alignRight="@+id/newInstrumentsEditBandTextView"
        android:layout_alignEnd="@+id/newInstrumentsEditBandTextView" />


</RelativeLayout>
