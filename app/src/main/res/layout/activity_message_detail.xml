<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mo.bandit_v1.MessageDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Invitation"
        android:id="@+id/bandRequest"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date: "
        android:id="@+id/bandnameBandRequest"
        android:layout_below="@+id/bandRequest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message:"
        android:id="@+id/genreEventRequest"
        android:layout_below="@+id/textEventRequest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sender: "
        android:id="@+id/textEventRequest"
        android:layout_below="@+id/bandnameBandRequest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sendername"
        android:id="@+id/sendernameNotificationDetailActivityTextView"
        android:layout_toEndOf="@+id/textEventRequest"
        android:layout_alignTop="@+id/textEventRequest"
        android:layout_toRightOf="@+id/textEventRequest" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="datum"
        android:id="@+id/dateNotificationDetailActivityTextView"
        android:layout_toEndOf="@+id/bandnameBandRequest"
        android:layout_below="@+id/bandRequest"
        android:layout_toRightOf="@+id/bandnameBandRequest" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Text"
        android:id="@+id/messageNotificationDetailActivityTextView"
        android:layout_below="@+id/sendernameNotificationDetailActivityTextView"
        android:layout_toRightOf="@+id/genreEventRequest"
        android:layout_toEndOf="@+id/genreEventRequest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/acceptMessageDetailActivityButton"
        android:layout_below="@+id/messageNotificationDetailActivityTextView"
        android:layout_alignLeft="@+id/messageNotificationDetailActivityTextView"
        android:layout_alignStart="@+id/messageNotificationDetailActivityTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:id="@+id/declineMessageDetailActivityButton"
        android:layout_toEndOf="@+id/acceptMessageDetailActivityButton"
        android:layout_alignTop="@+id/acceptMessageDetailActivityButton"
        android:layout_toRightOf="@+id/acceptMessageDetailActivityButton" />
</RelativeLayout>
